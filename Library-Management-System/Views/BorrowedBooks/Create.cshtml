@model Library_Management_System.Models.Dtos.BorrowedBooksDto

<h2>Borrow a Book</h2>

<form asp-action="Create">
    <div class="form-group">
        <label>Book</label>
        <select asp-for="BookID" asp-items="ViewBag.BookList" class="form-control"></select>
    </div>
    <div class="form-group">
        <label>Member</label>
        <select asp-for="MemberID" asp-items="ViewBag.MemberList" class="form-control"></select>
    </div>

    <button type="submit" class="btn btn-success">Borrow</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
