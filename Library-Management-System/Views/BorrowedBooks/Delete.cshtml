@model Library_Management_System.Models.BorrowedBooks

<h2>Delete Borrow Record</h2>

<div>
    <h4>Are you sure you want to delete this borrow record?</h4>
    <dl class="row">
        <dt class="col-sm-2">Book</dt>
        <dd class="col-sm-10">@Model.Books.Title</dd>
        <dt class="col-sm-2">Member</dt>
        <dd class="col-sm-10">@Model.Members.FirstName @Model.Members.LastName</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="BorrowID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
